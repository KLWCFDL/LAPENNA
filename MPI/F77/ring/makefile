#========================================================
# Simple makefile for the ring1.f lab exercise
#========================================================

#-----------------------------------------------#
#--- Platform specific mpi FORTRAN compilers ---#
#-----------------------------------------------#

CC  = ftn

#------------------------------#
#--- FORTRAN source code(s) ---#
#------------------------------#

SRC  = ring1.f

#------------------------#
#--- compilation rule ---#
#------------------------#

ring1: $(SRC)
	$(CC) -o $@ $(SRC)
