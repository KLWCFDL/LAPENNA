#========================================================
# Simple makefile for the mm.c lab exercises
#========================================================

#---------------------------------------------------------------#
#--- Platform specific mpi C compilers for the parallel code ---#
#---------------------------------------------------------------#

CC  = ftn

#------------------------#
#--- C source code(s) ---#
#------------------------#

SRC  = mpi_pi.f

#-------------------------#
#--- compilation rules ---#
#-------------------------#

mpi_pi: $(SRC)
	$(CC) -o $@ $(SRC)
