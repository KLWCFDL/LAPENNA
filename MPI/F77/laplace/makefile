#========================================================
# Simple makefile for the laplace.c lab exercises
#========================================================

#-----------------------------------------#
#--- Platform specific mpi C compilers ---#
#-----------------------------------------#

CC  = ftn

#------------------------#
#--- C source code(s) ---#
#------------------------#

SRC  = mpi_laplace.f

#------------------------#
#--- compilation rule ---#
#------------------------#

mpi_laplace: $(SRC)
	$(CC_$(MACHINE)) -o $@ $(SRC)
