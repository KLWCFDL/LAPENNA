#========================================================
# Simple makefile for the array.c lab exercises
#========================================================

#---------------------------------------------------------------#
#--- Platform specific mpi C compilers for the parallel code ---#
#---------------------------------------------------------------#

CC  = ftn

#------------------------#
#--- C source code(s) ---#
#------------------------#

SRC  = mpi_array.f

#-------------------------#
#--- compilation rules ---#
#-------------------------#

mpi_array: $(SRC)
	$(CC) -o  $@ $(SRC)
