#========================================================
# Simple makefile for the mpi_timing.c lab exercise
#========================================================

#-----------------------------------------#
#--- Platform specific mpi C compilers ---#
#-----------------------------------------#

CC    =ftn

#------------------------#
#--- C source code(s) ---#
#------------------------#

SRC  = mpi_timing.f

#------------------------#
#--- compilation rule ---#
#------------------------#

mpi_timing: $(SRC)
	$(CC) -o $@ $(SRC) 

